{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@playwright/mcp@latest"]
    },
    "brave-search": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "YOUR_BRAVE_API_KEY"
      }
    },
    "hf-mcp-server": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://huggingface.co/mcp",
        "--header",
        "Authorization: Bearer YOUR_HF_TOKEN"
      ]
    },
    "Context7": {
      "url": "https://mcp.context7.com/mcp",
      "headers": {"CONTEXT7_API_KEY" : "YOUR_CONTEXT7_API_KEY" }
    },
    "exa": {
      "type" : "http",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=YOUR_EXA_API_KEY",
      "headers" :{}
      },
    "XcodeBuildMCP": {
      "command": "bunx",
      "args": ["-y", "xcodebuildmcp@latest"]
    },
    "deepwiki": {
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "octocode": {
      "command": "bunx",
      "args": ["octocode-mcp"],
      "env": {
        "GITHUB_TOKEN": "YOUR_GITHUB_TOKEN"
      }
    },
    "chrome-devtools": {
      "command": "bunx",
      "args": ["chrome-devtools-mcp@latest"]
    },
    "vibe-annotations": {
      "type": "http",
      "url": "http://127.0.0.1:3846/mcp"
    },
    "dataforseo": {
      "type": "http",
      "url": "https://mcp.dataforseo.com/http",
      "headers": {
        "Authorization": "Basic YOUR_BASE64_ENCODED_CREDENTIALS"
      }
    },
    "reddit-mcp": {
      "type": "stdio",
      "command": "/opt/homebrew/bin/uv",
      "args": [
        "run",
        "--directory",
        "/path/to/your/reddit-mcp-search",
        "reddit-mcp"
      ],
      "env": {
        "REDDIT_CLIENT_ID": "YOUR_REDDIT_CLIENT_ID",
        "REDDIT_CLIENT_SECRET": "YOUR_REDDIT_CLIENT_SECRET"
      }
    },
    "firecrawl-mcp": {
      "type": "http",
      "url": "https://mcp.firecrawl.dev/YOUR_FIRECRAWL_TOKEN/v2/mcp"
    },
    "reddit": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "/path/to/your/reddit-mcp",
        "run",
        "server.py"
      ],
      "env": {
        "REDDIT_CLIENT_ID": "YOUR_REDDIT_CLIENT_ID",
        "REDDIT_CLIENT_SECRET": "YOUR_REDDIT_CLIENT_SECRET"
      }
    },
    "convex": {
      "type":"stdio",
      "command":"bunx",
      "args":["convex@latest","mcp","start"]
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "shadcn": {
      "command": "bunx",
      "args": ["shadcn@latest", "mcp"]
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    }
  }
}
