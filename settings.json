{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude-code-project-index/scripts/run_python.sh /Users/samarthgupta/.claude-code-project-index/scripts/reindex_if_needed.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": []
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude-code-project-index/scripts/run_python.sh /Users/samarthgupta/.claude-code-project-index/scripts/update_index.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-script.sh",
    "padding": 1
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": false,
    "pr-review-toolkit@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "feature-dev@claude-code-plugins": false,
    "security-guidance@claude-code-plugins": true,
    "git-workflow@claude-code-templates": false,
    "supabase-toolkit@claude-code-templates": false,
    "nextjs-vercel-pro@claude-code-templates": false,
    "testing-suite@claude-code-templates": false,
    "security-pro@claude-code-templates": false,
    "ai-ml-toolkit@claude-code-templates": false,
    "devops-automation@claude-code-templates": false,
    "documentation-generator@claude-code-templates": false,
    "performance-optimizer@claude-code-templates": false,
    "project-management-suite@claude-code-templates": false,
    "example-skills@anthropic-agent-skills": false,
    "document-skills@anthropic-agent-skills": false
  },
  "alwaysThinkingEnabled": true
}
