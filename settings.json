{
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude/hooks/learning-style-session-start.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude/hooks/session-context-loader.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude-code-project-index/scripts/run_python.sh /Users/samarthgupta/.claude-code-project-index/scripts/reindex_if_needed.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/samarthgupta/.claude/plugins/cache/episodic-memory/cli/episodic-memory.js sync",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /Users/samarthgupta/.claude/hooks/session-parser.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": []
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude-code-project-index/scripts/run_python.sh /Users/samarthgupta/.claude-code-project-index/scripts/update_index.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-script.sh",
    "padding": 1
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": false,
    "pr-review-toolkit@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "feature-dev@claude-code-plugins": false,
    "security-guidance@claude-code-plugins": true,
    "code-review@claude-code-plugins": false,
    "document-skills@anthropic-agent-skills": false,
    "explanatory-output-style@claude-code-plugins": false,
    "learning-output-style@claude-code-plugins": false,
    "frontend-design@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": false,
    "hookify@claude-code-plugins": false,
    "superpowers@superpowers-marketplace": false,
    "superpowers-chrome@superpowers-marketplace": false,
    "elements-of-style@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": false,
    "example-skills@anthropic-agent-skills": false
  },
  "forceLoginMethod": "claudeai",
  "alwaysThinkingEnabled": true
}
