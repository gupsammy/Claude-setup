{
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/file-suggestion.sh"
  },
  "cleanupPeriodDays": 30,
  "permissions": {
    "allow": [],
    "deny": [
      "Read(./.DS_Store)"
    ],
    "defaultMode": "dontAsk"
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samarthgupta/.claude/hooks/session-context-loader.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Frog.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Sosumi.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-script.sh",
    "padding": 0.5
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": false,
    "context7@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": true,
    "figma@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": false,
    "plugin-dev@claude-plugins-official": false,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "playground@claude-plugins-official": true
  },
  "forceLoginMethod": "claudeai",
  "syntaxHighlightingDisabled": false,
  "alwaysThinkingEnabled": true
}
